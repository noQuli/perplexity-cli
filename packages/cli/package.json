    "@types/command-exists": "^1.2.3",
    "@types/diff": "^7.0.2",
    "@types/dotenv": "^6.1.1",
    "@types/node": "^20.19.27",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/semver": "^7.7.1",
    "@types/shell-quote": "^1.7.5",
    "@types/tar": "^6.1.13",
    "@types/yargs": "^17.0.35",
    "archiver": "^7.0.1",
    "ink-testing-library": "^4.0.0",
    "jsdom": "^26.1.0",
    "pretty-format": "^30.0.2",
    "react-dom": "^19.2.3",
    "typescript": "^5.9.3",
