    "ink-link": "^4.1.0",
    "ink-spinner": "^5.0.0",
    "lowlight": "^3.3.0",
    "open": "^10.2.0",
    "qrcode-terminal": "^0.12.0",
    "react": "^19.2.3",
    "read-package-up": "^11.0.0",
    "shell-quote": "^1.8.3",
    "simple-git": "^3.30.0",
    "string-width": "^7.2.0",
    "strip-ansi": "^7.1.2",
