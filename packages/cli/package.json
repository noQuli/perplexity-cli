    "ansi-regex": "^6.2.2",
    "command-exists": "^1.2.9",
    "comment-json": "^4.5.0",
    "diff": "^7.0.0",
    "dotenv": "^17.2.3",
    "extract-zip": "^2.0.1",
    "fzf": "^0.5.2",
    "glob": "^10.5.0",
