{
  "name": "@perplexity-cli/perplexity-cli",
  "version": "0.1.6",
  "description": "Perplexity CLI",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NoQuli/perplexity-cli.git"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "perplexity": "dist/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "node ../../scripts/build_package.js",
    "start": "node dist/index.js",
    "debug": "node --inspect-brk dist/index.js",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:ci": "vitest run",
    "typecheck": "tsc --noEmit",
    "check-i18n": "tsx ../../scripts/check-i18n.ts"
  },
  "files": [
    "dist"
  ],
  "config": {
    "sandboxImageUri": "ghcr.io/perplexity-ai/perplexity-cli:0.1.6"
  },
